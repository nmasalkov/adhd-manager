<%= render "devise/shared/error_messages", resource: resource %>
<div class="form-wrapper">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-container">
        <div class="user-form-input field">
          <%= f.label :login %>
          <%= f.text_field :login, autofocus: true, class: 'user-form-field', autocomplete: "login" %>
        </div>

        <div class="user-form-input field">
          <%= f.label :password %>
          <%= f.password_field :password, class: 'user-form-field', autocomplete: "current-password" %>
        </div>

        <div class="login-button actions">
          <%= f.submit "Log in", class: 'user-submit' %>
        </div>
      </div>
    <% end %>
</div>
