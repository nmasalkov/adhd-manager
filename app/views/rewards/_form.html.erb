<%= form_with model: reward,  data: { turbo: false }, turbo: false, local: true do |form| %>
  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title, autofocus: true, required: true %>
  </div>

  <div class="field">
    <%= form.label :probability %>
    <%= form.number_field :probability, required: true %>
  </div>

  <div class="actions">
    <%= form.submit 'Save', class: 'user-submit', 'data-turbo': 'false'  %>
  </div>
<% end %>
