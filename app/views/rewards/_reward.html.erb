<%= turbo_frame_tag dom_id(reward) do %>
  <div data-controller="reward">
    <%= link_to reward.title, edit_reward_path(reward, locale: I18n.locale), data: { turbo_frame: dom_id(reward) } %>
    <%= reward.probability %>%
    <%= link_to 'x', reward_path(reward, locale: I18n.locale), method: :delete, data: { turbo_method: :delete, turbo_confirm: t('rewards.delete_confirm') }, class: 'delete-link' %>
  </div>
<% end %>
